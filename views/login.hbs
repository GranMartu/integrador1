<title>We are not a cult</title>
<link rel="stylesheet" href="./css/style-register.css">

<div class="form" , action="/login" , method="POST">

    <div class="register-menu">
        <div class="button button-block"><a href="/register">Sign Up</a></div>
        <div class="button button-block"><a href="/login">Log In</a></div>
        <div class="button button-block"><a href="/">Back</a></div>
    </div>

    <div class="login">
        <h1><span>Bearify</span> yourself!</h1>

        <form action="/login" method="post">

            <div class="field-wrap">
                <label for="bearname">
                    Bear Name *
                </label>
                <input type="text" required autocomplete="off" id="bearname" name="bearname" />
            </div>

            <div class="field-wrap">
                <label for="password">
                    Password *
                </label>
                <input type="password" required autocomplete="off" id="password" name="password" />
            </div>
            <button class="button button-block" />Log In</button>
            {{#if message}}
            <p class="fbtxt">{{message}}</p>
            {{/if}}
        </form>

    </div>
</div>